{
	"info": {
		"_postman_id": "ajemiua-api-collection",
		"name": "AJEMIUA API - Collection Complète",
		"description": "Collection Postman pour tester l'API AJEMIUA",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "base_url",
			"value": "http://127.0.0.1:8000",
			"type": "string"
		},
		{
			"key": "access_token",
			"value": "",
			"type": "string"
		},
		{
			"key": "refresh_token",
			"value": "",
			"type": "string"
		},
		{
			"key": "user_id",
			"value": "",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "1. Inscription",
			"item": [
				{
					"name": "Inscription utilisateur",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"matricule\": \"MAT001\",\n    \"nom\": \"Doe\",\n    \"prenom\": \"John\",\n    \"telephone\": \"1234567890\",\n    \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/register/",
							"host": ["{{base_url}}"],
							"path": ["register", ""]
						}
					}
				}
			]
		},
		{
			"name": "2. Admin",
			"item": [
				{
					"name": "Connexion Admin",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    pm.collectionVariables.set(\"access_token\", jsonData.tokens.access);",
									"    pm.collectionVariables.set(\"refresh_token\", jsonData.tokens.refresh);",
									"}"
								]
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"matricule\": \"ADMIN001\",\n    \"password\": \"adminpassword\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/admin/login/",
							"host": ["{{base_url}}"],
							"path": ["auth", "admin", "login", ""]
						}
					}
				},
				{
					"name": "Liste tous les utilisateurs",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/auth/admin/users/",
							"host": ["{{base_url}}"],
							"path": ["auth", "admin", "users", ""]
						}
					}
				},
				{
					"name": "Liste utilisateurs en attente",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/auth/admin/users/pending/",
							"host": ["{{base_url}}"],
							"path": ["auth", "admin", "users", "pending", ""]
						}
					}
				},
				{
					"name": "Liste utilisateurs approuvés",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/auth/admin/users/approved/",
							"host": ["{{base_url}}"],
							"path": ["auth", "admin", "users", "approved", ""]
						}
					}
				},
				{
					"name": "Détails utilisateur",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/auth/admin/users/:user_id/",
							"host": ["{{base_url}}"],
							"path": ["auth", "admin", "users", ":user_id", ""],
							"variable": [
								{
									"key": "user_id",
									"value": "2"
								}
							]
						}
					}
				},
				{
					"name": "Approuver utilisateur",
					"request": {
						"method": "PATCH",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{}"
						},
						"url": {
							"raw": "{{base_url}}/auth/admin/users/:user_id/approve/",
							"host": ["{{base_url}}"],
							"path": ["auth", "admin", "users", ":user_id", "approve", ""],
							"variable": [
								{
									"key": "user_id",
									"value": "2"
								}
							]
						}
					}
				},
				{
					"name": "Désapprouver utilisateur",
					"request": {
						"method": "PATCH",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{}"
						},
						"url": {
							"raw": "{{base_url}}/auth/admin/users/:user_id/disapprove/",
							"host": ["{{base_url}}"],
							"path": ["auth", "admin", "users", ":user_id", "disapprove", ""],
							"variable": [
								{
									"key": "user_id",
									"value": "2"
								}
							]
						}
					}
				}
			]
		},
		{
			"name": "3. Utilisateur",
			"item": [
				{
					"name": "Connexion utilisateur",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    pm.collectionVariables.set(\"access_token\", jsonData.tokens.access);",
									"    pm.collectionVariables.set(\"refresh_token\", jsonData.tokens.refresh);",
									"}"
								]
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"matricule\": \"MAT001\",\n    \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/login/",
							"host": ["{{base_url}}"],
							"path": ["login", ""]
						}
					}
				},
				{
					"name": "Mes informations",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/user/",
							"host": ["{{base_url}}"],
							"path": ["user", ""]
						}
					}
				},
				{
					"name": "Modifier mes informations",
					"request": {
						"method": "PATCH",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"nom\": \"NouveauNom\",\n    \"prenom\": \"NouveauPrenom\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/user/",
							"host": ["{{base_url}}"],
							"path": ["user", ""]
						}
					}
				}
			]
		},
		{
			"name": "4. Tokens",
			"item": [
				{
					"name": "Rafraîchir token",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    pm.collectionVariables.set(\"access_token\", jsonData.access);",
									"}"
								]
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"refresh\": \"{{refresh_token}}\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/token/refresh/",
							"host": ["{{base_url}}"],
							"path": ["token", "refresh", ""]
						}
					}
				},
				{
					"name": "Déconnexion",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"refresh\": \"{{refresh_token}}\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/logout/",
							"host": ["{{base_url}}"],
							"path": ["logout", ""]
						}
					}
				}
			]
		}
	]
}

